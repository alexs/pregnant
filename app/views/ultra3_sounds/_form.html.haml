- remote_form_for @ultra3_sound, :url => {:action => :create }, :before => "$('.creating').show();", :complete => "$('.creating').hide();" do |f|
  - if !f.error_messages.empty?
    .validation
      = f.error_messages
  %table
    %tr
      %td
        = f.hidden_field :patient_id
    %tr
      %td Nombre
      %td Indice de Pulsatilidad
      %td Notch
      %td Onda A
    %hr
    %tr
      %td
        Arteria Uterina Derecha IP
      %td
        = f.text_field :ArteriaUterinaDerecha, :size => 20
      %td
        = select( "ultra_sound", "nutch_AUD", { "+" => "+", "-" => "-"}, {:include_blank => true})
    %tr
      %td
        Arteria Uterina Izquierda IP
      %td
        = f.text_field :ArteriaUterinaIzquierda, :size => 20
      %td
        = select( "ultra_sound", "nutch_AUI", { "+" => "+", "-" => "-"}, {:include_blank => true})
    %tr
      %td
        Arteria Umbilical IP
      %td
        = select("ultra_sound", "ArteriaUmbilical", {"ausente" => "asuente", "reverso" => "reverso", "presente" => "presente"}, {:include_blank => true}) 
    %tr
      %td
        Ducto Venoso IP
      %td
                       
      %td
        = select("ultra_sound", "DuctoVenoso", {"ausente" => "asuente", "reverso" => "reverso", "presente" => "presente"}, {:include_blank => true})
    %hr
    %tr
      %td
        Nombre
      %td
        Medida
      %td
        Semanas de Gestación
    %hr
    %tr
      %td
        Diametro biparietal
      %td
        = f.text_field :DiametroBiparietal, :size => 20
        mm
      %td
        = f.text_field :DiametroBiparietal_Semanas_Gestacion, :size => 20
    %tr
      %td
        Circunferencia Cefálica
      %td
        = f.text_field :CircunferenciaCefalica, :size => 20
        mm
      %td
        = f.text_field :CircunferenciaCefalica_Semanas_Gestacion, :size => 20
    %tr
      %td
        Circunferencia Abdominal
      %td
        = f.text_field :CircunferenciaAbdominal, :size => 20
        mm
      %td
        = f.text_field :CircunferenciaAbdominal_Semana_Gestacion, :size => 20
    %tr
      %td
        Longitud del Femur
      %td
        = f.text_field :LongitudFemur, :size => 20
        mm
      %td
        = f.text_field :LongitudFemur_Semanas_Gestacion, :size => 20
    %tr
      %td
        Cervix
      %td
        = f.text_field :Cervix, :size => 20
        mm
    %tr
      %td
        Placenta
      %td
        = f.text_field :Placenta, :size => 20
    %tr
      %td
        = f.label "Vena Umbilical"
        = f.text_field :VenaUmbilical, :size => 20
    %tr
      %td
        = f.label "Diametro vena umbilical"
        = f.text_field :DiametroVenaUmbilical, :size => 20
    %tr
      %td
        = f.label "Tei izquierdo"
        = f.text_field :TeiIzquierdo, :size => 20
    %tr
      %td
        = f.label "Tei derecho"
        = f.text_field :TeiDerecho, :size => 20
    %tr
      %td
        = f.label "IFI"
        = f.text_field :IFI, :size => 20
    %tr
      %td
        = f.label "ACM"
        = f.text_field :ACM, :size => 20
    %tr
      %td
        = f.label "Posición de la Placenta"
        = f.text_field :PosicionPlacenta, :size => 20
    %tr
      %td
        = f.label "ILA"
        = f.text_field :ILA, :size => 20
  .guardar
    = f.submit 'Guardar'
  .creating{:style => "display:none;"}Guardando, por favor espere
